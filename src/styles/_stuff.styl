// tooltip container
.tooltip
  position relative
  display inline-block
  cursor pointer

// tooltip text
.tooltiptext
    visibility hidden
    width 300px
    background-color $g9
    color $g0
    text-align center
    padding 5px 0
    border-radius 6px

    /* Position the tooltip text */
    position absolute
    z-index 1

    /* Fade in tooltip */
    opacity 0
    transition opacity 1s


/* Position the tooltip text */
.tooltip .tooltip-right
    // top 10%
    left 133%

.tooltip-left
  right 100%


/* Tooltip arrow */
.tooltip .tooltiptext::after
    content " "
    position absolute
    top 35%
    right 100%
    margin-left -5px
    border-width 5px
    border-style solid
    border-color transparent orange transparent transparent


/* Show the tooltip text when you mouse over the tooltip container */
.tooltip:hover .tooltiptext
    visibility visible
    opacity 0.8